/**app.wxss**/
/* 全局样式 */
page {
  background: var(--background-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-primary);
}

/* 主题色彩变量 - 橙色主题 */
:root {
  --primary-color: #FF6B35;
  --primary-light: #FF8A65;
  --primary-dark: #E64A19;
  --secondary-color: #FFAB91;
  --accent-color: #FFCCBC;
  --background-color: #FFF8F5;
  --card-background: #FFFFFF;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  --border-color: #E0E0E0;
  --shadow-light: 0 2rpx 12rpx rgba(255, 107, 53, 0.1);
  --shadow-medium: 0 4rpx 20rpx rgba(255, 107, 53, 0.15);
  --gradient-primary: linear-gradient(135deg, #FF6B35 0%, #FF8A65 100%);
  --gradient-light: linear-gradient(135deg, #FFCCBC 0%, #FFE0B2 100%);
}

/* 通用容器 */
.container {
  padding: 0 30rpx;
  min-height: 100vh;
}

.page-container {
  padding: 20rpx 30rpx;
  min-height: calc(100vh - 120rpx);
}

/* 卡片样式 - 现代化圆角设计 */
.card {
  background: var(--card-background);
  border-radius: 24rpx;
  box-shadow: var(--shadow-light);
  margin-bottom: 20rpx;
  overflow: hidden;
  border: 1rpx solid var(--border-color);
}

.card-padding {
  padding: 30rpx;
}

/* 按钮样式 - 现代化圆角设计 */
.btn {
  border-radius: 60rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  outline: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.2);
  border: 1rpx solid var(--primary-dark);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.btn-secondary {
  background: white;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-ghost {
  background: transparent;
  color: var(--text-secondary);
  border: 2rpx solid var(--border-color);
}

.btn-large {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 60rpx;
  font-size: 32rpx;
}

.btn-medium {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 40rpx;
}

.btn-small {
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
}

/* 文字样式 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-light {
  color: var(--text-light);
}

.text-green {
  color: var(--primary-color);
}

.text-orange {
  color: var(--primary-color);
}

.text-large {
  font-size: 36rpx;
  font-weight: 600;
}

.text-medium {
  font-size: 32rpx;
  font-weight: 500;
}

.text-small {
  font-size: 24rpx;
}

.text-center {
  text-align: center;
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  justify-content: space-around;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 间距样式 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.pt-10 { padding-top: 10rpx; }
.pt-20 { padding-top: 20rpx; }
.pt-30 { padding-top: 30rpx; }
.pb-10 { padding-bottom: 10rpx; }
.pb-20 { padding-bottom: 20rpx; }
.pb-30 { padding-bottom: 30rpx; }
.pl-10 { padding-left: 10rpx; }
.pl-20 { padding-left: 20rpx; }
.pr-10 { padding-right: 10rpx; }
.pr-20 { padding-right: 20rpx; }

/* 图片样式 */
.image-round {
  border-radius: 50%;
}

.image-rounded {
  border-radius: 12rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-primary {
  background: var(--primary-color);
  color: white;
}

.tag-light {
  background: #E8F5E8;
  color: var(--primary-color);
}

.tag-gray {
  background: #F0F0F0;
  color: var(--text-secondary);
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: var(--border-color);
  margin: 30rpx 0;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: var(--text-light);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

/* 动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.bounce {
  animation: bounce 0.6s ease-in-out;
}

@keyframes bounce {
  0%, 20%, 60%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  80% {
    transform: translateY(-5rpx);
  }
}