<!--components/empty-state/empty-state.wxml-->
<view class="empty-state {{size}}" wx:if="{{show}}">
  <!-- 图标区域 -->
  <view class="empty-icon-wrapper">
    <text class="empty-icon" wx:if="{{icon}}">{{icon}}</text>
    <image class="empty-image" wx:elif="{{image}}" src="{{image}}" mode="aspectFit" />
  </view>
  
  <!-- 文字区域 -->
  <view class="empty-content">
    <text class="empty-title" wx:if="{{title}}">{{title}}</text>
    <text class="empty-description" wx:if="{{description}}">{{description}}</text>
  </view>
  
  <!-- 操作按钮 -->
  <view class="empty-actions" wx:if="{{showButton}}">
    <button class="empty-btn {{buttonType}}" bindtap="onButtonTap">
      {{buttonText}}
    </button>
  </view>
</view>