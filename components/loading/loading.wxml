<!--components/loading/loading.wxml-->
<view class="loading-container {{type}}" wx:if="{{show}}">
  <!-- 旋转加载器 -->
  <view class="spinner" wx:if="{{type === 'spinner'}}">
    <view class="spinner-dot"></view>
    <view class="spinner-dot"></view>
    <view class="spinner-dot"></view>
  </view>
  
  <!-- 圆形加载器 -->
  <view class="circle-loader" wx:if="{{type === 'circle'}}">
    <view class="circle"></view>
  </view>
  
  <!-- 波浪加载器 -->
  <view class="wave-loader" wx:if="{{type === 'wave'}}">
    <view class="wave-bar"></view>
    <view class="wave-bar"></view>
    <view class="wave-bar"></view>
    <view class="wave-bar"></view>
    <view class="wave-bar"></view>
  </view>
  
  <!-- 脉冲加载器 -->
  <view class="pulse-loader" wx:if="{{type === 'pulse'}}">
    <view class="pulse-circle"></view>
  </view>
  
  <!-- 加载文字 -->
  <text class="loading-text" wx:if="{{text}}">{{text}}</text>
</view>