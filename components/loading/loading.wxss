/* components/loading/loading.wxss */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-light);
  margin-top: 20rpx;
  text-align: center;
}

/* 旋转加载器 */
.spinner {
  display: flex;
  gap: 8rpx;
}

.spinner-dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--primary-color);
  border-radius: 50%;
  animation: spinner-bounce 1.4s ease-in-out infinite both;
}

.spinner-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.spinner-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes spinner-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 圆形加载器 */
.circle-loader {
  width: 60rpx;
  height: 60rpx;
}

.circle {
  width: 100%;
  height: 100%;
  border: 4rpx solid rgba(255, 107, 53, 0.2);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: circle-spin 1s linear infinite;
}

@keyframes circle-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 波浪加载器 */
.wave-loader {
  display: flex;
  align-items: flex-end;
  gap: 4rpx;
  height: 40rpx;
}

.wave-bar {
  width: 6rpx;
  background: var(--primary-color);
  border-radius: 3rpx;
  animation: wave-bounce 1.2s ease-in-out infinite;
}

.wave-bar:nth-child(1) {
  animation-delay: -1.1s;
}

.wave-bar:nth-child(2) {
  animation-delay: -1.0s;
}

.wave-bar:nth-child(3) {
  animation-delay: -0.9s;
}

.wave-bar:nth-child(4) {
  animation-delay: -0.8s;
}

.wave-bar:nth-child(5) {
  animation-delay: -0.7s;
}

@keyframes wave-bounce {
  0%, 40%, 100% {
    height: 10rpx;
  }
  20% {
    height: 40rpx;
  }
}

/* 脉冲加载器 */
.pulse-loader {
  width: 60rpx;
  height: 60rpx;
  position: relative;
}

.pulse-circle {
  width: 100%;
  height: 100%;
  background: var(--primary-color);
  border-radius: 50%;
  animation: pulse-scale 1.0s ease-in-out infinite;
}

@keyframes pulse-scale {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0;
  }
}

/* 尺寸变体 */
.loading-container.small {
  padding: 20rpx;
}

.loading-container.small .circle {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

.loading-container.small .pulse-circle {
  width: 40rpx;
  height: 40rpx;
}

.loading-container.small .wave-loader {
  height: 30rpx;
}

.loading-container.small .wave-bar {
  width: 4rpx;
}

.loading-container.small .loading-text {
  font-size: 22rpx;
  margin-top: 15rpx;
}

.loading-container.large {
  padding: 60rpx;
}

.loading-container.large .circle {
  width: 80rpx;
  height: 80rpx;
  border-width: 6rpx;
}

.loading-container.large .pulse-circle {
  width: 80rpx;
  height: 80rpx;
}

.loading-container.large .wave-loader {
  height: 50rpx;
}

.loading-container.large .wave-bar {
  width: 8rpx;
}

.loading-container.large .loading-text {
  font-size: 30rpx;
  margin-top: 25rpx;
}

/* 全屏遮罩模式 */
.loading-container.overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  z-index: 9999;
  padding: 0;
}

.loading-container.overlay.dark {
  background: rgba(0, 0, 0, 0.7);
}

.loading-container.overlay.dark .loading-text {
  color: rgba(255, 255, 255, 0.8);
}

/* 内联模式 */
.loading-container.inline {
  padding: 20rpx 0;
  flex-direction: row;
}

.loading-container.inline .loading-text {
  margin-top: 0;
  margin-left: 15rpx;
}