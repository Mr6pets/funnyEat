/* components/dish-card/dish-card.wxss */
.dish-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  position: relative;
}

.dish-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-medium);
}

/* 卡片尺寸变体 */
.dish-card.small {
  width: 200rpx;
}

.dish-card.medium {
  width: 280rpx;
}

.dish-card.large {
  width: 100%;
}

.dish-card.horizontal {
  display: flex;
  flex-direction: row;
  width: 100%;
}

/* 图片区域 */
.dish-image {
  width: 100%;
  height: 200rpx;
  background: #f0f0f0;
}

.dish-card.small .dish-image {
  height: 150rpx;
}

.dish-card.horizontal .dish-image {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}

/* 收藏按钮 */
.favorite-btn {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.favorite-btn:active {
  transform: scale(1.1);
}

.favorite-btn.active {
  background: rgba(255, 107, 53, 0.1);
  animation: heartbeat 0.6s ease;
}

.favorite-icon {
  font-size: 32rpx;
}

/* 评分标签 */
.rating-badge {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  z-index: 10;
}

.rating-text {
  font-size: 20rpx;
  font-weight: 500;
}

/* 内容区域 */
.dish-content {
  padding: 20rpx;
}

.dish-card.small .dish-content {
  padding: 15rpx;
}

.dish-card.horizontal .dish-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
}

.dish-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.dish-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  flex: 1;
  margin-right: 10rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-card.small .dish-name {
  font-size: 24rpx;
}

.dish-card.horizontal .dish-name {
  font-size: 30rpx;
  white-space: normal;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.dish-time {
  font-size: 20rpx;
  color: var(--text-light);
  flex-shrink: 0;
}

.dish-description {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.dish-card.small .dish-description {
  font-size: 22rpx;
  -webkit-line-clamp: 1;
}

/* 标签 */
.dish-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 15rpx;
}

.dish-tag {
  background: #FFF5F2;
  color: var(--primary-color);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.dish-card.small .dish-tag {
  font-size: 18rpx;
  padding: 3rpx 10rpx;
}

/* 元信息 */
.dish-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.meta-item {
  font-size: 22rpx;
  color: var(--text-light);
}

.dish-card.small .meta-item {
  font-size: 20rpx;
}

/* 动画效果 */
@keyframes heartbeat {
  0% { transform: scale(1); }
  25% { transform: scale(1.2); }
  50% { transform: scale(1); }
  75% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

/* 加载状态 */
.dish-card.loading {
  background: #f8f8f8;
}

.dish-card.loading .dish-image {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .dish-card.medium {
    width: 240rpx;
  }
  
  .dish-name {
    font-size: 26rpx;
  }
  
  .dish-description {
    font-size: 22rpx;
  }
  
  .favorite-btn {
    width: 50rpx;
    height: 50rpx;
  }
  
  .favorite-icon {
    font-size: 28rpx;
  }
}