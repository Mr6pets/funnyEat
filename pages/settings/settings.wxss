/* pages/settings/settings.wxss */
.settings-container {
  padding-bottom: 120rpx;
  background: var(--background-color);
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  padding: 40rpx 30rpx 30rpx;
  text-align: center;
  background: white;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: block;
}

/* 设置区域 */
.setting-section {
  background: white;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: var(--shadow-light);
}

.section-header {
  margin-bottom: 25rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
}

/* 菜系选择 */
.cuisine-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.cuisine-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  transition: all 0.3s ease;
  position: relative;
}

.cuisine-item:active {
  transform: scale(0.98);
}

.cuisine-item.selected {
  border-color: var(--primary-color);
  background: rgba(255, 107, 53, 0.05);
}

.cuisine-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.cuisine-name {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.cuisine-check {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: bold;
}

/* 难度选择 */
.difficulty-options {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.difficulty-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.difficulty-item:active {
  transform: scale(0.98);
}

.difficulty-item.selected {
  border-color: var(--primary-color);
  background: rgba(255, 107, 53, 0.05);
}

.difficulty-info {
  flex: 1;
}

.difficulty-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 5rpx;
}

.difficulty-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
}

.difficulty-radio {
  font-size: 32rpx;
  color: var(--primary-color);
  margin-left: 20rpx;
}

/* 时间滑块 */
.time-slider {
  padding: 20rpx 0;
}

.slider {
  width: 100%;
  margin-bottom: 20rpx;
}

.time-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}

.time-label {
  font-size: 22rpx;
  color: var(--text-light);
}

/* 食材标签 */
.ingredient-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.ingredient-tag {
  padding: 12rpx 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 25rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
  background: white;
  transition: all 0.3s ease;
}

.ingredient-tag:active {
  transform: scale(0.95);
}

.ingredient-tag.selected {
  border-color: var(--primary-color);
  background: var(--primary-color);
  color: white;
}

/* 饮食偏好 */
.diet-options,
.recommend-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.diet-item,
.recommend-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 20rpx;
  background: var(--background-color);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.diet-item:active,
.recommend-item:active {
  background: #EEEEEE;
}

.diet-info,
.recommend-info {
  flex: 1;
}

.diet-name,
.recommend-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 5rpx;
}

.diet-desc,
.recommend-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
}

.diet-switch,
.recommend-switch {
  margin-left: 20rpx;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn-secondary {
  background: white;
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
}

.action-btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
}

/* 提示区域 */
.tips-section {
  margin: 0 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: var(--shadow-light);
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
}

.tip-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  flex: 1;
}

/* 重置确认弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.reset-modal {
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  transform: scale(0.8);
  transition: all 0.3s ease;
}

.modal-overlay.show .reset-modal {
  transform: scale(1);
}

.reset-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid var(--border-color);
}

.reset-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.reset-content {
  padding: 40rpx 30rpx;
  text-align: center;
}

.reset-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.reset-actions {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.reset-btn-secondary,
.reset-btn-primary {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.reset-btn-secondary {
  background: #F5F5F5;
  color: var(--text-secondary);
}

.reset-btn-primary {
  background: #FF4444;
  color: white;
}

/* 选中状态动画 */
.cuisine-item.selected,
.difficulty-item.selected {
  animation: selectPulse 0.3s ease;
}

.ingredient-tag.selected {
  animation: tagSelect 0.3s ease;
}

@keyframes selectPulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.02); }
  100% { transform: scale(1); }
}

@keyframes tagSelect {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .cuisine-grid {
    grid-template-columns: 1fr;
  }
  
  .cuisine-item,
  .difficulty-item,
  .diet-item,
  .recommend-item {
    padding: 20rpx 15rpx;
  }
  
  .ingredient-tag {
    padding: 10rpx 20rpx;
    font-size: 22rpx;
  }
  
  .action-section {
    flex-direction: column;
  }
  
  .action-btn {
    width: 100%;
  }
}