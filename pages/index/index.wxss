/* pages/index/index.wxss */
.index-container {
  padding-bottom: 120rpx;
  background: linear-gradient(180deg, #E8F5E8 0%, #F1F8E9 100%);
  min-height: 100vh;
}

/* 问候语区域 */
.greeting-section {
  padding: 60rpx 30rpx 40rpx;
  text-align: center;
}

.greeting-text {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.greeting-main {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.greeting-sub {
  font-size: 28rpx;
  color: var(--text-secondary);
  opacity: 0.8;
}

/* 通用区域样式 */
.section {
  margin-bottom: 50rpx;
}

.section-header {
  padding: 0 30rpx 20rpx;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 5rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 今日推荐 */
.recommendation-scroll {
  white-space: nowrap;
}

.recommendation-list {
  display: flex;
  padding: 0 30rpx;
}

.recommendation-card {
  position: relative;
  width: 280rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: var(--shadow-medium);
  flex-shrink: 0;
}

.recommendation-image {
  width: 100%;
  height: 100%;
}

.recommendation-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.6) 100%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
}

.recommendation-tag {
  align-self: flex-start;
  background: var(--primary-color);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.recommendation-info {
  display: flex;
  flex-direction: column;
}

.recommendation-name {
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 6rpx rgba(0,0,0,0.8);
  line-height: 1.3;
}

.recommendation-reason {
  color: #FFFFFF;
  font-size: 24rpx;
  opacity: 0.95;
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.8);
  font-weight: 500;
}

/* 快速选择 */
.quick-choice-container {
  margin: 0 30rpx;
  background: white;
  border-radius: 32rpx;
  padding: 50rpx 30rpx;
  text-align: center;
  box-shadow: var(--shadow-light);
  border: 1rpx solid var(--border-color);
}

.quick-choice-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quick-choice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.quick-choice-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

.quick-choice-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: var(--gradient-primary);
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.4);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.quick-choice-btn::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
  transform: rotate(45deg);
  transition: all 0.6s ease;
  opacity: 0;
}

.quick-choice-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.4);
}

.quick-choice-btn:active::before {
  opacity: 1;
  animation: shine 0.6s ease;
}

.quick-choice-btn.shaking {
  animation: shake 0.8s ease-in-out;
}

.quick-choice-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.quick-choice-text {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 0 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  border: 1rpx solid var(--border-color);
}

.category-item:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-medium);
}

.category-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.category-icon {
  font-size: 40rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--text-primary);
  font-weight: 500;
}

/* 菜系列表 */
.cuisine-list {
  padding: 0 30rpx;
}

.cuisine-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background: white;
  border-radius: 24rpx;
  margin-bottom: 15rpx;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  border: 1rpx solid var(--border-color);
}

.cuisine-item:active {
  transform: translateX(10rpx);
  box-shadow: var(--shadow-medium);
}

.cuisine-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.cuisine-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.cuisine-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 5rpx;
}

.cuisine-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.cuisine-arrow {
  font-size: 32rpx;
  color: var(--text-light);
  font-weight: 300;
}

/* 结果弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.result-modal {
  width: 600rpx;
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
  transform: scale(0.8);
  transition: all 0.3s ease;
  border: 1rpx solid var(--border-color);
}

.modal-overlay.show .result-modal {
  transform: scale(1);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.result-close {
  font-size: 40rpx;
  color: var(--text-light);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-content {
  padding: 30rpx;
}

.result-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.result-info {
  text-align: center;
}

.result-dish-name {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 10rpx;
  display: block;
}

.result-dish-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
  display: block;
}

.result-tags {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.result-tag {
  background: #E8F5E8;
  color: var(--primary-color);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin: 0 5rpx 10rpx;
}

.result-meta {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.result-meta-item {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin: 0 15rpx;
}

.result-actions {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.result-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.result-btn-secondary {
  background: #F5F5F5;
  color: var(--text-secondary);
}

.result-btn-primary {
  background: var(--primary-color);
  color: white;
}

/* 动画效果 */
@keyframes shake {
  0%, 100% { transform: rotate(0deg); }
  10% { transform: rotate(-10deg); }
  20% { transform: rotate(10deg); }
  30% { transform: rotate(-10deg); }
  40% { transform: rotate(10deg); }
  50% { transform: rotate(-5deg); }
  60% { transform: rotate(5deg); }
  70% { transform: rotate(-5deg); }
  80% { transform: rotate(5deg); }
  90% { transform: rotate(-2deg); }
}

@keyframes shine {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}